@page
@model Mappings

@{
    ViewData["Title"] = "Mappings";
}
<table class="table">
    <thead>
    <tr>
        <th>GUID</th>
        <th>Title</th>
        <th>Updated</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var map in Model.Maps)
    {
        <tr>
            <th scope="row">@map.Guid</th>
            <td> @map.Title </td>
            <td> @map.UpdatedAt </td>
            <td>
                <button class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#details-@map.Guid">Details and Edit</button>
                <button class="btn btn-danger" >X</button>
            </td>
        </tr>
        <tr id="details-@map.Guid" class="collapse">
            <td colspan="4">
                <div class="form-floating">
                    <textarea class="form-control"
                                  style="height: 300px; white-space: pre-line">@map.Raw</textarea>

                </div>
                <p>
                    <div class="d-flex flex-row-reverse">
                        <button class="btn btn-warning">Save and Update</button>
                    </div>
            </td>
        </tr>
    }
    </tbody>
</table>
<div class="d-flex flex-row-reverse">
    <form method="post" asp-page-handler="ResetAllMappings">
        <input type="hidden" asp-for="@Model.Request.Query["id"]" name="id"/> 
        <button type="submit" class="btn btn-danger">Reset All Mappings</button>
    </form>
</div>

<div>
    <a asp-page="../Server">Back to List</a>
</div>